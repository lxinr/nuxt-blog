{
  "name": "nuxt-blog",
  "version": "1.0.0",
  "description": "一个基于nuxt.js构建博客系统",
  "author": "lxinr",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development PORT=3100 nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "nuxt build && cross-env NODE_ENV=production PORT=3100 node server/index.js",
    "pm2": "cross-env NODE_ENV=production PORT=3100 pm2 start server/index.js --name=\"blog\"",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.0.0",
    "cross-env": "^5.2.0",
    "date-fns": "^1.30.1",
    "fs-extra": "^7.0.1",
    "koa": "^2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-router": "^7.4.0",
    "node-sass": "^4.11.0",
    "nuxt": "^2.3.4",
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "sass-loader": "^7.1.0",
    "uglifyjs-webpack-plugin": "^2.1.1",
    "vuetify": "^1.2.4"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^5.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-vue": "^4.0.0",
    "nodemon": "^1.11.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2"
  }
}
